# =============================================================================
# MedFocus PhD - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# For local development, you can use the mock values provided

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
DATABASE_URL="file:./medfocus.db"
DB_TYPE="sqlite"

# -----------------------------------------------------------------------------
# SERVER
# -----------------------------------------------------------------------------
NODE_ENV="development"
PORT=3001
API_BASE_URL="http://localhost:3001"
CLIENT_URL="http://localhost:5173"

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
JWT_SECRET="medfocus-local-dev-secret-change-in-production"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=10

# -----------------------------------------------------------------------------
# GOOGLE CLOUD PLATFORM (GCP)
# -----------------------------------------------------------------------------
# For local development, these can be mock values or left empty
GCP_PROJECT_ID="medfocus-phd-dev"
GCP_REGION="us-central1"
GCP_SERVICE_ACCOUNT_KEY_PATH="./config/gcp-service-account.json"

# Vertex AI / Gemini
GEMINI_API_KEY=""  # Get from Google AI Studio for local dev
VERTEX_AI_ENDPOINT=""
GEMINI_MODEL="gemini-1.5-pro-002"

# -----------------------------------------------------------------------------
# EXTERNAL APIS
# -----------------------------------------------------------------------------
# ANVISA (Dados Abertos)
ANVISA_API_BASE="https://dados.anvisa.gov.br/dados"
ANVISA_API_KEY=""  # Not required for public endpoints

# OpenFDA
OPENFDA_API_BASE="https://api.fda.gov"
OPENFDA_API_KEY=""  # Optional, increases rate limits

# PubMed (NCBI Entrez)
PUBMED_API_BASE="https://eutils.ncbi.nlm.nih.gov/entrez/eutils"
PUBMED_API_KEY=""  # Recommended for higher rate limits
PUBMED_EMAIL=""    # Required by NCBI

# ClinicalTrials.gov
CLINICALTRIALS_API_BASE="https://clinicaltrials.gov/api/v2"

# -----------------------------------------------------------------------------
# FIREBASE (for production)
# -----------------------------------------------------------------------------
FIREBASE_PROJECT_ID=""
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""
FIREBASE_API_KEY=""
FIREBASE_AUTH_DOMAIN=""

# -----------------------------------------------------------------------------
# STORAGE
# -----------------------------------------------------------------------------
# Local development uses local filesystem
STORAGE_TYPE="local"  # Options: local, gcs, s3
STORAGE_BUCKET=""
UPLOAD_MAX_SIZE="50MB"

# Google Cloud Storage
GCS_BUCKET_NAME=""
GCS_PROJECT_ID=""

# -----------------------------------------------------------------------------
# WEBSOCKETS
# -----------------------------------------------------------------------------
WEBSOCKET_PORT=3002
WEBSOCKET_PATH="/ws"

# -----------------------------------------------------------------------------
# REDIS (for production caching)
# -----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL="debug"  # Options: error, warn, info, debug
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# -----------------------------------------------------------------------------
# RATE LIMITING
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_MOCK_APIS=true          # Use mock data for external APIs
ENABLE_AI_FEATURES=true        # Enable Gemini AI features
ENABLE_COLLABORATION=true      # Enable wiki and voting features
ENABLE_ANALYTICS=true          # Enable analytics tracking
ENABLE_NOTIFICATIONS=true      # Enable push notifications

# -----------------------------------------------------------------------------
# PARTNERSHIP APIs (B2B)
# -----------------------------------------------------------------------------
# These will be provided by partner labs
PARTNER_API_ENDPOINT=""
PARTNER_API_KEY=""

# Eurofarma
EUROFARMA_API_KEY=""
EUROFARMA_API_BASE=""

# Cimed
CIMED_API_KEY=""
CIMED_API_BASE=""

# -----------------------------------------------------------------------------
# DOCUMENT AI (GCP)
# -----------------------------------------------------------------------------
DOCUMENT_AI_PROCESSOR_ID=""
DOCUMENT_AI_LOCATION="us"

# -----------------------------------------------------------------------------
# BIGQUERY
# -----------------------------------------------------------------------------
BIGQUERY_DATASET_ID="medfocus_analytics"
BIGQUERY_PROJECT_ID=""

# -----------------------------------------------------------------------------
# STRIPE (for payments - production)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# -----------------------------------------------------------------------------
# EMAIL (for notifications - production)
# -----------------------------------------------------------------------------
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@medfocus.com"

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
# LGPD/HIPAA Compliance
ENABLE_AUDIT_LOG=true
ENABLE_ENCRYPTION_AT_REST=true
ENABLE_2FA=false  # Set to true in production
SESSION_TIMEOUT=3600000  # 1 hour in milliseconds

# -----------------------------------------------------------------------------
# DEVELOPMENT TOOLS
# -----------------------------------------------------------------------------
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_API_DOCS=true  # Swagger/OpenAPI
ENABLE_DEBUG_MODE=true
